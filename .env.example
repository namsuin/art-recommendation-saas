# Environment Variables Template for Art Recommendation SaaS
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# API Keys
GOOGLE_VISION_API_KEY=your_google_vision_api_key
CLARIFAI_API_KEY=your_clarifai_api_key
REPLICATE_API_TOKEN=your_replicate_token

# Admin
ADMIN_AUTH_CODE=your_admin_auth_code

# Database (if using Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Authentication
JWT_SECRET=your_jwt_secret

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
MET_MUSEUM_API_URL=https://collectionapi.metmuseum.org/public/collection/v1
RIJKS_MUSEUM_API_KEY=your_rijks_museum_api_key

# Redis (if using)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id
